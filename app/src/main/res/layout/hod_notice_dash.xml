<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smart_campus.smartcampus.hod.hod_notice_dash">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_spinner_popup"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.example.smart_campus.smartcampus.API.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="#5588FF"
            wheel:matProg_progressIndeterminate="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Notice Title :"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/accent_material_light"
            android:textSize="21dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ttlTV"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/background_material_dark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Notice Content :"
            android:id="@+id/textView2"
            android:textColor="@color/accent_material_light"
            android:textSize="21dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@+id/ttlTV" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/contTV"
            android:layout_gravity="center_horizontal"
            android:lines="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/background_material_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From :"
            android:id="@+id/textView3"
            android:textColor="@color/accent_material_light"
            android:textSize="21dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@+id/contTV" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/fromTV"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/background_material_dark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView3" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="| Notice |"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="35dp"
        android:textStyle="bold" />

</RelativeLayout>
